.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
  overflow: auto;
}

.players-info {
  width: 100%;
  padding: 20px;
  background-color: #f2f2f2;
}

.player-info {
  margin-bottom: 6px;
}

.dice-container {
  width: 100px;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px;
  border: 1px solid #000;
  border-radius: 10px;
}

.dice {
  font-size: 24px;
}

.roll-button {
  margin: 10px;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}

.game-board {
  position: relative;
  width: 100%;
  margin-top: 20px;
}

.tile {
  position: absolute;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
}

.player-marker {
  position: absolute;
  width: 25px;
  height: 25px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 12px;
  text-align: center;
  transition: all 0.5s ease;
}

