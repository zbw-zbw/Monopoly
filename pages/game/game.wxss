.page-game {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.players-info {
  display: flex;
  justify-content: center;
  width: 100%;
  padding: 0 10px;
}

.player-info {
  flex: 1;
  margin-right: 6px;
  padding: 6px;
  font-weight: bold;
  font-size: 10px;
  border-radius: 10px;
}

.player-info:last-child {
  margin-right: 0;
}

.player-user {
  display: flex;
  margin-bottom: 6px;
}

.player-avatar {
  width: 30px;
  height: 30px;
  margin-right: 4px;
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;
  border-radius: 4px;
}

.player-name {
  color: #fff;
}

.player-status {
  margin-top: 4px;
  color: yellow;
}

.player-money,
.player-tile-count {
  margin-bottom: 4px;
  color: #fff;
}

.player-items,
.player-items-empty {
  color: #fff;
}

.game-board {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300px;
  height: 300px;
}

.dice-container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 80px;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2px solid orange;
  border-radius: 50%;
}

.dice-img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;
}

.tile {
  position: absolute;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 10px;
  font-weight: bold;
  border: 0.5px solid #ccc;
}

.player-marker {
  position: absolute;
  width: 24px;
  height: 24px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;
  transition: all 0.5s ease;
}

.ad {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 10vh;
  color: #fff;
  font-size: 40px;
  font-weight: bold;
  background-color: indianred;
}
