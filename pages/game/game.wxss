.page-game {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.players-info {
  display: flex;
  justify-content: center;
  width: 100%;
  padding: 0 6px;
}

.player-info {
  flex: 1;
  margin-right: 6px;
  padding: 6px;
  font-weight: bold;
  font-size: 12px;
  border-radius: 8px;
  background-color: #ffffff;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.player-info:last-child {
  margin-right: 0;
}

.player-info.active {
  box-shadow: 0 0 8px rgba(255, 255, 0, 0.8), 0 0 16px rgba(255, 255, 0, 0.6);
  border-color: #ffd400;
}

.player-info.bankrupt {
  background-color: #d3d3d3 !important;
}

.player-info.paused .player-name-status .player-status {
  color: #000;
}

.player-info.bankrupt .player-avatar {
  opacity: 0.5;
}

.player-info.bankrupt .player-name-status .player-status {
  color: #888888;
}

.player-name-status {
  flex: 1;
}

.player-user {
  display: flex;
  margin-bottom: 6px;
}

.player-avatar {
  width: 32px;
  height: 32px;
  margin-right: 4px;
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;
  border-radius: 50%;
}

.player-name {
  color: #fff;
  word-break: break-all;
}

.player-status {
  margin-top: 1px;
  font-size: 10px;
  color: #ffd400;
}

.player-money,
.player-tile-count {
  margin-bottom: 4px;
  font-weight: bold;
  color: #fff;
}

.round-info {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32px;
  padding: 2px 20px;
  font-size: 20px;
  font-weight: bold;
  border: 2px solid #4caf50;
  border-radius: 8px;
  background-color: #eaf4e1;
}

.round-number {
  padding: 0 6px;
  color: #388e3c;
}

.game-board {
  position: absolute;
  top: 54%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: center;
  align-items: center;
  width: 340px;
  height: 340px;
  border-radius: 16px;
  /* border: 4px solid #ddd; */
}

.board-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300px;
  height: 300px;
  margin: auto;
  pointer-events: none;
}

.dice-countdown-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.turn-countdown {
  margin-bottom: 10px;
  padding: 4px 6px;
  color: white;
  font-size: 12px;
  text-align: center;
  border-radius: 5px;
  background-color: rgba(0, 0, 0, 0.7);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

.dice-container {
  width: 90px;
  height: 90px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 3px solid #ff9800;
  border-radius: 50%;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.dice-img {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;
}

.tile {
  position: absolute;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 10px;
  font-weight: bold;
  border: 1px solid #ccc;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 4px;
}

.player-marker {
  position: absolute;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.5s ease;
}

.player-marker .marker-avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
}

.page-game .btn-reset-game {
  position: absolute;
  bottom: 20vh;
}

.player-items-wrap {
  position: absolute;
  bottom: 4vh;
  width: 300px;
}

.player-items-content {
  padding: 8px 20px;
  border-radius: 8px;
  background-color: #ffffff;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}

.player-item {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 8px;
}

.player-item:last-child {
  margin-bottom: 0;
}

.player-item .item-name {
  flex: 1;
  font-weight: bold;
}

.player-item .use-item {
  width: 60px;
  margin-left: 20px;
  padding: 4px;
  font-size: 14px;
}

.empty-items {
  font-weight: bold;
  text-align: center;
  color: #888;
}
